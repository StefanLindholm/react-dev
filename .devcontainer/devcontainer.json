{
    "name": "MyDevContainer",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "node": "lts",
        "powershell": "latest"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "esbenp.prettier-vscode",
                "GitHub.copilot"
            ]
        }
    },
    "forwardPorts": [5173],
    "postCreateCommand": "",
    "remoteUser": "vscode",
    "hostRequirements": {
        "memory": "8gb"
    }
}
